<Window x:Class="UmBuster.Views.FlashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlashWindow" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" WindowState="Maximized"
        IsHitTestVisible="False">
    
    <Window.Resources>
        <Storyboard x:Key="FlashAnimation">
            <DoubleAnimation Storyboard.TargetName="FlashBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0.8" To="0.0" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="FlashBorder" 
            BorderBrush="#FF0000" 
            BorderThickness="20" 
            Opacity="0.0"
            Background="#22FF0000"/> 
    <!-- Added slight background tint for visibility, but mainly border -->
</Window>
